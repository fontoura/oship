<html xmlns="http://www.w3.org/1999/xhtml"
            xmlns:tal="http://xml.zope.org/namespaces/tal">
    <head>
        <title>Archetype Details</title>
        <LINK rel="stylesheet" type="text/css" 
      tal:attributes="href static/css/oship.css" />
    </head>

    <body>

        <h1>Archetype Details</h1>
        <pre>
            <tal:block repeat="widget view/widgets">
            <tal:block content="widget/label" />
            <input tal:replace="structure widget" />
            </tal:block>
        </pre>


<!-- render all the action submit buttons -->
    <span class="actionButtons" tal:condition="view/availableActions">
        <input tal:repeat="action view/actions"
                 tal:replace="structure action/render" />
    </span>

    <span class="editLink">
        <a tal:attributes="href python:view.url(u'@@edit')">Edit Archetype</a>
        <a tal:attributes="href python:view.url(u'@@inspect.html')">Object Inspector</a>
    </span>


 </body>
 </html>

